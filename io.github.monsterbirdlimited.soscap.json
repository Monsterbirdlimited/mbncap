{
  "app-id": "io.github.monsterbirdlimited.soscap",
  "runtime": "org.gnome.Platform",
  "runtime-version": "43",
  "sdk": "org.gnome.Sdk",
  "command": "soscap.py",
  "finish-args": [
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=pulseaudio",
    "--socket=wayland",
    "--device=all"
  ],
  "modules": [
    {
      "name": "soscap",
      "buildsystem": "simple",
      "build-commands": [
        "make",
        "install -Dm755 soscap.py -t /app/bin/",
        "install -Dm644 io.github.monsterbirdlimited.soscap.appdata.xml -t /app/share/metainfo/",
        "install -Dm644 io.github.monsterbirdlimited.soscap.desktop -t /app/share/applications/",
        "install -Dm644 icon.png /app/share/icons/hicolor/64x64/apps/https://io.github.monsterbirdlimited.soscap.icon.png"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/Monsterbirdlimited/soscap"
          "commit": "6f97269421e43d8b1c0290abfe04c8de9b7df6b0"
          "tag": "v0.1.0-alpha"
          "x-checker-data": {
            "type": "git",
            "tag-pattern": "^v([\\d.]+)$",
            "is-main-source": true
          }
        }
      ]
    }
  ]
}

